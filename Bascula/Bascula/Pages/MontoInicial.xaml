<Window x:Class="Bascula.Pages.MontoInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bascula.Pages"
        mc:Ignorable="d"
        Title="MontoInicial" Height="231" Width="338"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <Label Content="Captura la cantidad inicial de dinero en caja" Height="61" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="14" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="Cantidad" Margin="39,76,58,0" FontSize="18" TextWrapping="Wrap" VerticalAlignment="Top"  FontFamily="Calibri"  Height="32" VerticalContentAlignment="Center" PreviewTextInput="Cantidad_PreviewTextInput"/>
        <Button Content="Aceptar" Margin="39,124,58,0" Background="#28b240" Foreground="White" FontFamily="Calibri" FontSize="20" Height="38" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
